{% extends 'admin/base.html.twig' %}

{% block title %}Voiture Détails{% endblock %}

{% block body %}
    <h1 class="mb-5">VOITURE
        <small class="text-muted">Détails</small>
    </h1>

    <table class="table">
        <tbody>
        <tr>
            <td></td>
            <td>
                <img class="w-25" src="{{ voiture.image }}" alt="{{ voiture.marque }}">
            </td>
        </tr>
        <tr>
            <th width="25%">Marque</th>
            <td>{{ voiture.marque }}</td>
        </tr>
        <tr>
            <th>Nombre de places</th>
            <td>{{ voiture.nombrePlace }}</td>
        </tr>
        <tr>
            <th>Matricule</th>
            <td>{{ voiture.matricule }}</td>
        </tr>
        <tr>
            <th>Chauffeur</th>
            <td><i class="fa fa-user mr-1"></i> {{ voiture.user.lastname }}</td>
        </tr>
        </tbody>
    </table>

    <div class="d-flex mt-5">
        <a class="btn btn-light mr-1" href="{{ path('voiture_index') }}">
            <i class="fa fa-chevron-left"></i>
            Retourner vers la liste des voitures
        </a>

        <a class="btn btn-primary mr-1" href="{{ path('voiture_edit', {'id': voiture.id}) }}">
            <i class="fas fa-pencil-alt"></i>
        </a>

        {{ include('admin/voiture/_delete_form.html.twig') }}
    </div>
{% endblock %}
