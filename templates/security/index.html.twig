{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="container">
        {{ form_start(form) }}
        {{ form_row(form.username, {attr:{'placeholder':'Nom de l\'utilisateur'}}) }}
        {{ form_row(form.email, {attr:{'placeholder':'Adress email'}}) }}
        {{ form_row(form.password, {attr:{'placeholder':'Mot de passe'}}) }}
        {{ form_end(form) }}
        <button type="submit" class ="btn btn-success">Inscription</button>
    </div>
{% endblock %}
