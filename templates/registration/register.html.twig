{% extends 'login_layout.html.twig' %}

{% block title %}Inscription gratuite{% endblock %}

{% block content %}
    <div class="py-5 px-3">
        <h1 class="h2 mb-4 font-weight-normal">Inscription</h1>

        {{ form_start(registrationForm) }}

        <div class="d-none">
            {{ form_row(registrationForm.firstname) }}
        </div>

        <div class="h6 custom-control custom-checkbox text-uppercase pl-1 mb-3">
            {{ form_row(registrationForm.chauffeur) }}
        </div>

        {{ form_row(registrationForm.lastname) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword) }}

        <div class="h6 custom-control custom-checkbox text-primary pl-1 mb-5">
            {{ form_row(registrationForm.agreeTerms) }}
        </div>

        <button class="btn btn-lg btn-primary btn-block">
            <i class="fa fa-check"></i>
            VALIDER
        </button>
        <div class="mt-5 text-right">
            Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a>
        </div>

        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
